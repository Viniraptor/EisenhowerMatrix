<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xsi:type="MailApp">
  <Id>2b906602-88bf-4be4-8941-d5cddbf87ab9</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>VINI DIRTY PLUGINS</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName>Eisenhower Matrix Plugin</DisplayName>
  <Description>
    Eisenhower Matrix Plugin to help organize your emails based on urgency and importance.
  </Description>
  <IconUrl>https://viniraptor.github.io/EisenhowerMatrix/icon.png</IconUrl>
  <HighResolutionIconUrl>https://viniraptor.github.io/EisenhowerMatrix/hiresicon.png</HighResolutionIconUrl>
  <SupportUrl>https://viniraptor.github.io/EisenhowerMatrix/support</SupportUrl>

  <Hosts>
    <Host>Name="Mailbox"</Host>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://viniraptor.github.io/EisenhowerMatrix/taskpane.html" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="MessageRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://viniraptor.github.io/EisenhowerMatrix/taskpane.html" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteMailbox</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <Action xsi:type="ShowTaskPane">
    <SourceLocation DefaultValue="https://viniraptor.github.io/EisenhowerMatrix/taskpane.html" />
    <Title>Eisenhower Matrix for Emails</Title>
  </Action>
</OfficeApp>
